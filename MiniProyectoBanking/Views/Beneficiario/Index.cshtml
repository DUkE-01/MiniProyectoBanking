@using MiniProyectoBanking.Core.Application.ViewModels.Beneficiarios
@model BeneficiarioViewModel

@{
    ViewData["Title"] = "Beneficiarios";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Beneficiarios</h1>
            <a href="@Url.Action("Index", "HomeUsuario")" class="btn btn-primary">Volver al Home</a>
        </div>

        <div class="mb-4">
            <h2>Agregar nuevo beneficiario</h2>
            <form asp-action="AgregarBeneficiario" method="post">
                <div class="form-group">
                    <label for="Nombre">Nombre</label>
                    <input type="text" class="form-control" id="Nombre" name="Nombre" required />
                </div>
                <div class="form-group">
                    <label for="Apellido">Apellido</label>
                    <input type="text" class="form-control" id="Apellido" name="Apellido" required />
                </div>
                <div class="form-group">
                    <label for="NumeroCuenta">Número de Cuenta</label>
                    <input type="text" class="form-control" id="NumeroCuenta" name="NumeroCuenta" required />
                </div>
                <button type="submit" class="btn btn-success">Agregar Beneficiario</button>
            </form>
        </div>

        <div>
            <h2>Lista de Beneficiarios</h2>
            @if (Model.Beneficiarios != null && Model.Beneficiarios.Count > 0)
            {
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>Número de Cuenta</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var beneficiario in Model.Beneficiarios)
                        {
                            <tr>
                                <td>@beneficiario.Nombre</td>
                                <td>@beneficiario.Apellido</td>
                                <td>@beneficiario.NumeroCuenta</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No hay beneficiarios registrados.</p>
            }
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
